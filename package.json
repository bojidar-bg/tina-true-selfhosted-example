{
  "name": "tina-true-selfhosted-example",
  "version": "1.0.0",
  "description": "A real example of self-hosting tina, without cloud offerings.",
  "main": "index.js",
  "author": "Bojidar Marinov <bojidar.marinov.bg@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "export NODE_OPTIONS='--import tsx'; ./patch-tina-cli.sh && tinacms build --skip-indexing --skip-search-index && eleventy",
    "clean": "[ -e _site ] && rm -r _site || true",
    "clean-build": "npm run clean && npm run build",
    "dev": "export NODE_OPTIONS='--import tsx'; ./patch-tina-cli.sh && tinacms dev -c 'eleventy --serve'",
    "serve": "export NODE_OPTIONS='--import tsx'; node tina/server"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@auth/express": "^0.11.0",
    "@bojidar-bg/tina-mdx-editor": "^0.1.0",
    "@bojidar-bg/tina-simple-git-provider": "^0.1.0",
    "@bojidar-bg/tina-simple-media-store": "^0.1.0",
    "@mdxeditor/editor": "^3.47.0",
    "@tinacms/datalayer": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "rave-level": "^1.0.0",
    "tinacms": "^2.9.0",
    "tinacms-authjs": "^12.0.0"
  },
  "devDependencies": {
    "@tinacms/cli": "^1.10.1",
    "@types/busboy": "^1.5.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.1.0",
    "tsx": "^4.20.3"
  }
}
